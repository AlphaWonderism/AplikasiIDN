    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:padding="10dp"
    tools:context=".DetailMapel">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvJudulMapel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/gradient"
            android:gravity="center_horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:text="Jadwal Pelajaran Kelas 7"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivdaftarpelajaran"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/ivdaftarguru"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/waktusenin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/waktusabtu" />

            <ImageView
                android:id="@+id/ivSenin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/senin8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/waktuselasa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/waktusabtu" />

            <ImageView
                android:id="@+id/ivSelasa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/selasa8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/wakturabu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/waktusabtu" />

            <ImageView
                android:id="@+id/ivRabu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/rabu8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/waktukamis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/waktusabtu" />

            <ImageView
                android:id="@+id/ivKamis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/kamis8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/waktujumat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/waktu1" />

            <ImageView
                android:id="@+id/ivJumat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/jumat8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/ivBeda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/waktusabtu8" />

            <ImageView
                android:id="@+id/ivSabtu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/sabtu8" />

        </LinearLayout>

    </LinearLayout>






