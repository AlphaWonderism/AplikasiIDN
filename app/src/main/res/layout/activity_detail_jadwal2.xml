<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".DetailJadwal2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal Pelajaran SMP IDN Boarding School"
        android:textSize="20sp"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:paddingVertical="15dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/gradient"/>

    <Button
        android:id="@+id/btnjadwal7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelas 7"
        android:textSize="20sp"
        android:layout_marginHorizontal="70dp"/>

    <Button
        android:id="@+id/btnjadwal8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelas 8"
        android:textSize="20sp"
        android:layout_marginHorizontal="70dp"/>

    <Button
        android:id="@+id/btnjadwal9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelas 9"
        android:textSize="20sp"
        android:layout_marginHorizontal="70dp"/>



</LinearLayout>